{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "./src",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ]
}
